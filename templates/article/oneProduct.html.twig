{% extends "layout.html.twig" %}

{% block content %}
     <div class="row div-show-produit d-flex justify-content-center align-items-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row mb-5">
                    <div class="">
                        <div class="product p-4">
                            <div class="mt-4 mb-3">
                                <h5 class="text-uppercase"> {{ produit.titre }} </h5>
                                <div class="price d-flex flex-row align-items-center">
                                    <span class="act-price">{{ produit.prix }}€</span>
                                </div>
                            </div>
                        </div>
                        <p class="about"> {{ produit.description }} </p>
                        <div class="sizes mt-5 text-center">
                            <h6 class="text-uppercase">taille : {{ produit.taille }}</h6>
                            <h6 class="text-uppercase">Couleur : {{ produit.couleur }}</h6>
                            <h6 class="text-uppercase">Il en reste {{ produit.stock }}</h6>
                        </div>
                        <div class="cart mt-4 align-items-center text-center">
                            <a href="{{ path('app_panier_add', {id: produit.id}) }}">
                                <button class="btn btn-success text-uppercase mr-2 px-4">
                                    Ajouter au panier
                                </button>  
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form(formCommentaire) }}

    {% for commentaire in produit.commentaires | reverse %}

        <div class="border-primary border rounded container mb-2">
            <h6 class="text-muted">{{ commentaire.dateDeCreation | date("d-m-Y \à H\\hi") }}</h6>
            <p>{{ commentaire.contenu }}</p>
        </div>

    {% endfor %}
{% endblock %}